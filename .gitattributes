
# Enable detection for all main project languages
*.rs linguist-detectable=true
*.c linguist-detectable=true
*.f90 linguist-detectable=true

# Exclude virtual environments and dependencies from language detection
FastApi/*/venv/* linguist-vendored

# Exclude all Python files by default, then include only main.py files
*.py linguist-vendored
FastApi/Sanjeev/main.py linguist-vendored=false
FastApi/Chai_aur_code/main.py linguist-vendored=false

# Ensure main project directories are included
Rust/* linguist-detectable=true
Fortan/* linguist-detectable=true
C/* linguist-detectable=true
