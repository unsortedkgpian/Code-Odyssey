# Explicitly mark source languages
*.rs linguist-language=Rust
*.py linguist-language=Python

# Be more aggressive about excluding Python artifacts
*.pyc linguist-vendored=true
*.pyo linguist-vendored=true
*.pyd linguist-vendored=true
__pycache__/ linguist-vendored=true
*.egg-info/ linguist-vendored=true
build/ linguist-vendored=true
dist/ linguist-vendored=true
.venv/ linguist-vendored=true
venv/ linguist-vendored=true
env/ linguist-vendored=true

# Rust artifacts
target/ linguist-vendored=true
Cargo.lock linguist-vendored=true

# Documentation
*.md linguist-documentation=true
*.txt linguist-documentation=true
*.rst linguist-documentation=true